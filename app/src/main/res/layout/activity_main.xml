<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quiz_app.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:text="Welcome to pseudoquiz"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="Sample question 1"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/answer_question_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Write answer here" />

            <TextView
                android:id="@+id/res_q1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="Sample question 2"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <CheckBox
                    android:id="@+id/answer_question_3-1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="option 1" />

                <CheckBox
                    android:id="@+id/answer_question_3-2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="option 2" />

                <CheckBox
                    android:id="@+id/answer_question_3-3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="option 3" />

            </LinearLayout>

            <TextView
                android:id="@+id/res_q2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingTop="5dp"
                android:text="Sample question 3"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/answer_question_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Write answer here" />

            <TextView
                android:id="@+id/res_q3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="Sample question 4"
                android:textSize="15sp" />

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <RadioButton
                    android:id="@+id/radio_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="answer 1" />

                <RadioButton
                    android:id="@+id/radio_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="answer 2" />

                <RadioButton
                    android:id="@+id/radio_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="answer 3" />

                <RadioButton
                    android:id="@+id/radio_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="answer 4" />
            </RadioGroup>

            <TextView
                android:id="@+id/res_q4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/check_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="getAnswer1"
                android:text="check" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>